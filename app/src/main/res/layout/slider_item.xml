<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="275dp">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/slideImageImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/downImageView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/slideImageImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/gradient_bg" />

    <TextView
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:id="@+id/slideTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/downImageView"
        app:layout_constraintEnd_toEndOf="@+id/downImageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/downImageView"
        app:layout_constraintTop_toTopOf="@+id/downImageView" />

    <ImageView
        app:layout_constraintEnd_toEndOf="@id/slideImageImageView"
        app:layout_constraintTop_toTopOf="@id/slideImageImageView"
        android:src="@drawable/ic_locked"
        android:id="@+id/lockIndicatorImageView"
        android:layout_width="20dp"
        android:layout_height="20dp" />
</android.support.constraint.ConstraintLayout>